<Page x:Class="casino.hilo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:casino"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="hilo">

    <Page.Resources>

        <!-- ===== KÉPES GOMB TEMPLATE (lekerekített, hover/press effekttel) ===== -->
        <ControlTemplate x:Key="ImageButtonTemplate" TargetType="Button">
            <Border x:Name="border"
                    Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="10">
                <Border x:Name="overlay"
                        CornerRadius="10"
                        Background="Transparent">
                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="overlay" Property="Background" Value="#33FFFFFF"/>
                    <Setter TargetName="border" Property="BorderBrush" Value="#C9A84C"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter TargetName="overlay" Property="Background" Value="#55000000"/>
                    <Setter TargetName="border" Property="BorderBrush" Value="#F0D080"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter TargetName="border" Property="Opacity" Value="0.35"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

        <!-- ===== TÉT GOMB STÍLUS (MIN, «, ‹, ›, », MAX) ===== -->
        <Style x:Key="BetButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="65"/>
            <Setter Property="Height" Value="65"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderBrush" Value="#7A5E22"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Template" Value="{StaticResource ImageButtonTemplate}"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="3" Opacity="0.6"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ===== DEAL GOMB STÍLUS (kicsit kiemelve arannyal) ===== -->
        <Style x:Key="DealButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="64"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border x:Name="OuterBorder"
                     CornerRadius="6"
                     Background="Transparent"
                     BorderThickness="1">
                                <Border.BorderBrush>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Color="#FFD700" Offset="0"/>
                                        <GradientStop Color="#8B6914" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.BorderBrush>
                            </Border>

                            <Border x:Name="InnerBorder"
                     CornerRadius="5"
                     Margin="1">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Color="#5A3E0A" Offset="0"/>
                                        <GradientStop Color="#2C1E04" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>

                                <TextBlock x:Name="ButtonLabel"
                                Text="{TemplateBinding Content}"
                                FontSize="18"
                                FontWeight="Bold"
                                FontFamily="Georgia"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                                    <TextBlock.Foreground>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                <GradientStop Color="#FFE066" Offset="0"/>
                                                <GradientStop Color="#B8860B" Offset="1"/>
                                            </LinearGradientBrush>
                                        </TextBlock.Foreground>
                                    </TextBlock>
                            </Border>

                            <Border CornerRadius="5,5,0,0"
                     Height="12"
                     Margin="2,2,2,0"
                     VerticalAlignment="Top">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Color="#40FFFFFF" Offset="0"/>
                                        <GradientStop Color="#00FFFFFF" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                            </Border>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="InnerBorder" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#7A5510" Offset="0"/>
                                            <GradientStop Color="#3D2A06" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="InnerBorder" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#1A0F02" Offset="0"/>
                                            <GradientStop Color="#3A2808" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="InnerBorder" Property="Margin" Value="1,2,1,0"/>
                            </Trigger>

                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="InnerBorder" Property="Opacity" Value="0.4"/>
                                <Setter TargetName="OuterBorder" Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- tet gombok -->
        <Style x:Key="TetButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border x:Name="OuterBorder"
              CornerRadius="90"
              Background="Transparent"
              BorderThickness="1">
                                <Border.BorderBrush>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Color="#FFD700" Offset="0"/>
                                        <GradientStop Color="#8B6914" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.BorderBrush>
                            </Border>

                            <Border x:Name="InnerBorder"
              CornerRadius="90"
              Margin="1">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Color="#5A3E0A" Offset="0"/>
                                        <GradientStop Color="#2C1E04" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>

                                <TextBlock x:Name="ButtonLabel"
                         Text="{TemplateBinding Content}"
                         FontSize="18"
                         FontWeight="Bold"
                         FontFamily="Georgia"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center">
                                    <TextBlock.Foreground>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#FFE066" Offset="0"/>
                                            <GradientStop Color="#B8860B" Offset="1"/>
                                        </LinearGradientBrush>
                                    </TextBlock.Foreground>
                                </TextBlock>
                            </Border>

                            <Border CornerRadius="90"
              Height="50"
              Margin="2,2,2,0"
              VerticalAlignment="Top">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Color="#40FFFFFF" Offset="0"/>
                                        <GradientStop Color="#00FFFFFF" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                            </Border>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="InnerBorder" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#7A5510" Offset="0"/>
                                            <GradientStop Color="#3D2A06" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="InnerBorder" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#1A0F02" Offset="0"/>
                                            <GradientStop Color="#3A2808" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="InnerBorder" Property="Margin" Value="1,2,1,0"/>
                            </Trigger>

                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="InnerBorder" Property="Opacity" Value="0.4"/>
                                <Setter TargetName="OuterBorder" Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <!-- ===== REGENERATE GOMB STÍLUS (kör alakú) ===== -->
        <ControlTemplate x:Key="CircleButtonTemplate" TargetType="Button">
            <Border x:Name="border"
                    Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="32">
                <Border x:Name="overlay" CornerRadius="32" Background="Transparent">
                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="overlay" Property="Background" Value="#33FFFFFF"/>
                    <Setter TargetName="border" Property="BorderBrush" Value="#C9A84C"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter TargetName="overlay" Property="Background" Value="#55000000"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

        <Style x:Key="RegenerateButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="64"/>
            <Setter Property="Height" Value="64"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderBrush" Value="#7A5E22"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Template" Value="{StaticResource CircleButtonTemplate}"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" BlurRadius="12" ShadowDepth="3" Opacity="0.7"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ===== VISSZA GOMB ===== -->
        <ControlTemplate x:Key="VissszaTemplate" TargetType="Button">
            <Border x:Name="border"
                    CornerRadius="8"
                    BorderThickness="1.5"
                    BorderBrush="#7A5E22"
                    Padding="14,0">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#CC000000" Offset="0"/>
                        <GradientStop Color="#EE050505" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="◀  " Foreground="#C9A84C" FontSize="13" VerticalAlignment="Center"/>
                    <ContentPresenter VerticalAlignment="Center"/>
                </StackPanel>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="border" Property="BorderBrush" Value="#C9A84C"/>
                    <Setter TargetName="border" Property="Background">
                        <Setter.Value>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#CC1a1500" Offset="0"/>
                                <GradientStop Color="#EE0a0a00" Offset="1"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter TargetName="border" Property="Opacity" Value="0.7"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

        <Style x:Key="VissszaStyle" TargetType="Button">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="Foreground" Value="#C9A84C"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontFamily" Value="Georgia"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template" Value="{StaticResource VissszaTemplate}"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="3" Opacity="0.6"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ===== KISEBB / NAGYOBB ===== -->
        <ControlTemplate x:Key="ActionButtonTemplate" TargetType="Button">
            <Border x:Name="border"
                    Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="1.5"
                    CornerRadius="10">
                <Border x:Name="overlay" CornerRadius="10" Background="Transparent">
                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="overlay" Property="Background" Value="#22FFFFFF"/>
                    <Setter TargetName="border" Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="5" Opacity="0.7"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter TargetName="overlay" Property="Background" Value="#44000000"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter TargetName="border" Property="Opacity" Value="0.3"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

        <Style x:Key="LowerButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="150"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontFamily" Value="Georgia"/>
            <Setter Property="FontSize" Value="17"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#FFA0A0"/>
            <Setter Property="BorderBrush" Value="#9e2d2d"/>
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#BB6b1a1a" Offset="0"/>
                        <GradientStop Color="#DD3d0f0f" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Template" Value="{StaticResource ActionButtonTemplate}"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#6b1a1a" BlurRadius="14" ShadowDepth="4" Opacity="0.55"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="HigherButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="150"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontFamily" Value="Georgia"/>
            <Setter Property="FontSize" Value="17"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#80FFA8"/>
            <Setter Property="BorderBrush" Value="#2d9e5a"/>
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#BB1a6b3c" Offset="0"/>
                        <GradientStop Color="#DD0f3d22" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Template" Value="{StaticResource ActionButtonTemplate}"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#1a6b3c" BlurRadius="14" ShadowDepth="4" Opacity="0.55"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ===== TÉT KIJELZŐ LABEL ===== -->
        <Style x:Key="BetLabelStyle" TargetType="Label">
            <Setter Property="Foreground" Value="#F0D080"/>
            <Setter Property="FontFamily" Value="Georgia"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- ===== INFOSÁV BORDER ===== -->
        <Style x:Key="InfoBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="#AA000000"/>
            <Setter Property="BorderBrush" Value="#7A5E22"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="12,5"/>
        </Style>

    </Page.Resources>

    <Viewbox Stretch="Uniform">
        <Grid Width="1280" Height="720">
            <Grid.Background>
                <ImageBrush ImageSource="/jatekok/hilo/hilo_bg.png"/>
            </Grid.Background>
            <Grid.RowDefinitions>
                <RowDefinition Height="15*"/>
                <RowDefinition Height="50*"/>
                <RowDefinition Height="9*"/>
            </Grid.RowDefinitions>

            <!-- ===== FELSŐ SÁV ===== -->
            <Button x:Name="vissza"
                    Content="Vissza"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left"
                    Margin="20,0,0,0"
                    Style="{StaticResource VissszaStyle}"
                    Click="vissza_Click"/>

            <Border Style="{StaticResource InfoBorderStyle}"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <local:ido Foreground="#C9A84C" FontFamily="Georgia" FontSize="16"/>
            </Border>

            <Border Style="{StaticResource InfoBorderStyle}"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Margin="0,0,20,0">
                <TextBlock x:Name="egyenlegTB" FontFamily="Georgia" FontSize="18" Foreground="#FF7A5E22">
                    <Run Text="Egyenleg: " Foreground="#FF7A5E22"/>
                    <Run x:Name="egyenlegertek" Text="50 000 Ft" Foreground="#FFF0D080" FontWeight="Bold"/>
                </TextBlock>
            </Border>

            <!-- ===== JÁTÉKTÉR ===== -->

            <!-- Kártya -->
            <Image x:Name="kartya"
                   Grid.Row="1"
                   Source="/jatekok/blackjack/cards/2C.png"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Width="200"
                   Height="Auto"
                   RenderOptions.BitmapScalingMode="HighQuality">
                <Image.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="28" ShadowDepth="8" Opacity="0.85"/>
                </Image.Effect>
            </Image>

            <!-- Regenerate gomb a kártya jobb felső sarka mellé -->
            <Button x:Name="regenerate"
                    Grid.Row="1"
                    Style="{StaticResource RegenerateButtonStyle}"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Margin="696,57,0,0"
                    Click="regenerate_Click">
                <Button.Background>
                    <ImageBrush ImageSource="/jatekok/hilo/rebet.png" Stretch="Uniform"/>
                </Button.Background>
            </Button>

            <!-- Tét kijelző a játéktér alján -->
            <Border Grid.Row="1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Margin="0,0,0,8"
                    Background="#AA000000"
                    BorderBrush="#7A5E22"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="20,2">
                    <Label x:Name="bet"
                           Content="0 Ft"
                           Style="{StaticResource BetLabelStyle}"
                           Padding="0"/>
            </Border>

            <!-- ===== ALSÓ VEZÉRLŐ SÁV ===== -->
            <StackPanel Grid.Row="2" Visibility="Visible">
                <StackPanel.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,0">
                        <GradientStop Color="#CC000000" Offset="1"/>
                        <GradientStop Color="#EE050e09" Offset="0"/>
                    </LinearGradientBrush>
                </StackPanel.Background>

                <StackPanel x:Name="tetkezelo" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Visible" Margin="0,10,0,0">
                    <Button x:Name="min" Style="{StaticResource TetButtonStyle}" Content="MIN" Click="min_Click" Margin="5"/>
                    <Button x:Name="minusx" Style="{StaticResource TetButtonStyle}" Content="«" Click="minusx_Click" Margin="5"/>
                    <Button x:Name="minus" Style="{StaticResource TetButtonStyle}" Content="‹" Click="minus_Click" Margin="5"/>
                    <Button x:Name="deal" Style="{StaticResource DealButtonStyle}" Content="DEAL" Click="deal_Click" Width="100" Margin="5"/>
                    <Button x:Name="plus" Style="{StaticResource TetButtonStyle}" Content="›" Click="plus_Click" Margin="5"/>
                    <Button x:Name="plusx" Style="{StaticResource TetButtonStyle}" Content="»" Click="plusx_Click" Margin="5"/>
                    <Button x:Name="max" Style="{StaticResource TetButtonStyle}" Content="MAX" Click="max_Click" Margin="5"/>
                </StackPanel>
                <StackPanel x:Name="kezelo" Orientation="Horizontal" HorizontalAlignment="Center" Visibility="Collapsed" Margin="0,10,0,0" VerticalAlignment="Center">
                    <Button x:Name="lower" Style="{StaticResource LowerButtonStyle}" Click="dontes" Margin="0,0,20,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="▼  " VerticalAlignment="Center" FontSize="15"/>
                            <TextBlock Text="KISEBB" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="cashout" Style="{StaticResource DealButtonStyle}" Content="CASH OUT" Width="140" Margin="10" Click="cashout_Click"/>
                    <Button x:Name="higher" Style="{StaticResource HigherButtonStyle}" Click="dontes" Margin="20,0,0,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="NAGYOBB" VerticalAlignment="Center"/>
                            <TextBlock Text="  ▲" VerticalAlignment="Center" FontSize="15"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Viewbox>
</Page>
