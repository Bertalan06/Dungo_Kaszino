<Page x:Class="casino.mines"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="#1a1a2e">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Fejléc -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Content="← Vissza" Click="Button_Click"
                    Background="#16213e" Foreground="White" BorderThickness="0"
                    Padding="10,5" FontSize="14" Cursor="Hand"/>
            <TextBlock Grid.Column="1" Text="💣 MINES" FontSize="28" FontWeight="Bold"
                       Foreground="#e94560" HorizontalAlignment="Center"/>
        </Grid>

        <!-- Beállítások / Fogadás panel -->
        <Border Grid.Row="1" Background="#16213e" CornerRadius="10" Padding="15" Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Tét -->
                <StackPanel Grid.Column="0" Margin="5">
                    <TextBlock Text="Tét ($)" Foreground="#aaaaaa" FontSize="12" Margin="0,0,0,4"/>
                    <TextBox x:Name="BetInput" Text="10" Background="#0f3460" Foreground="White"
                             BorderThickness="0" Padding="8,6" FontSize="14"/>
                </StackPanel>

                <!-- Akna szám -->
                <StackPanel Grid.Column="1" Margin="5">
                    <TextBlock Text="Aknák száma" Foreground="#aaaaaa" FontSize="12" Margin="0,0,0,4"/>
                    <ComboBox x:Name="MineCountCombo" Background="#0f3460" Foreground="White"
                              BorderThickness="0" Padding="8,6" FontSize="14"
                              SelectionChanged="MineCountCombo_SelectionChanged">
                        <ComboBoxItem Content="1"/>
                        <ComboBoxItem Content="3" IsSelected="True"/>
                        <ComboBoxItem Content="5"/>
                        <ComboBoxItem Content="10"/>
                        <ComboBoxItem Content="15"/>
                        <ComboBoxItem Content="20"/>
                        <ComboBoxItem Content="24"/>
                    </ComboBox>
                </StackPanel>

                <!-- Szorzó -->
                <StackPanel Grid.Column="2" Margin="5">
                    <TextBlock Text="Szorzó" Foreground="#aaaaaa" FontSize="12" Margin="0,0,0,4"/>
                    <TextBlock x:Name="MultiplierText" Text="1.00x" Foreground="#f0c040"
                               FontSize="22" FontWeight="Bold" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Nyeremény -->
                <StackPanel Grid.Column="3" Margin="5">
                    <TextBlock Text="Nyeremény" Foreground="#aaaaaa" FontSize="12" Margin="0,0,0,4"/>
                    <TextBlock x:Name="WinText" Text="$0.00" Foreground="#4ecca3"
                               FontSize="22" FontWeight="Bold" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Gombok -->
                <StackPanel Grid.Column="4" Margin="5" VerticalAlignment="Bottom">
                    <Button x:Name="StartButton" Content="▶ Játék" Click="StartButton_Click"
                            Background="#e94560" Foreground="White" BorderThickness="0"
                            Padding="15,8" FontSize="14" FontWeight="Bold" Cursor="Hand"
                            Margin="0,0,0,5">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="5" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button x:Name="CashoutButton" Content="💰 Cashout" Click="CashoutButton_Click"
                            Background="#4ecca3" Foreground="#1a1a2e" BorderThickness="0"
                            Padding="15,8" FontSize="14" FontWeight="Bold" Cursor="Hand"
                            IsEnabled="False">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="5" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Játéktér -->
        <Border Grid.Row="2" Background="#16213e" CornerRadius="10" Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Státusz -->
                <TextBlock x:Name="StatusText" Grid.Row="0" Text="Add meg a tétet és nyomj Játék-ra!"
                           Foreground="#aaaaaa" FontSize="14" HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>

                <!-- Grid -->
                <UniformGrid x:Name="GameGrid" Grid.Row="1" Rows="5" Columns="5"/>
            </Grid>
        </Border>

        <!-- Egyenleg -->
        <Border Grid.Row="3" Background="#16213e" CornerRadius="10" Padding="10,8" Margin="0,15,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Egyenleg:" Foreground="#aaaaaa" FontSize="13" VerticalAlignment="Center"/>
                <TextBlock x:Name="BalanceText" Grid.Column="1" Text="$1000.00"
                           Foreground="White" FontSize="16" FontWeight="Bold" VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Page>