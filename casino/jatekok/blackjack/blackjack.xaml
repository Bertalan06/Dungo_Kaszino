<Page x:Class="casino.blackjack"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:casino"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="blackjack">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="bj_hatter.png"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>

        <Button Content="Vissza" Height="30" Width="80" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20" Grid.ColumnSpan="2" Click="Button_Click" />

        <Grid Grid.Row="1" Grid.Column="1" RenderTransformOrigin="0.497,0.477">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,20,0,0">
                <Button x:Name="hit" Width="50" Height="50" Margin="10">
                    <Button.Background>
                        <ImageBrush ImageSource="icon/hit.png"/>
                    </Button.Background>
                </Button>
                <Button x:Name="stand" Width="50" Height="50" Margin="10">
                    <Button.Background>
                        <ImageBrush ImageSource="icon/stand.png"/>
                    </Button.Background>
                </Button>
                <Button x:Name="double" Width="50" Height="50" Margin="10">
                    <Button.Background>
                        <ImageBrush ImageSource="icon/double.png"/>
                    </Button.Background>
                </Button>
                <Button x:Name="deal" Width="100" Height="50" Margin="10">
                    <Button.Background>
                        <ImageBrush ImageSource="icon/deal.png"/>
                    </Button.Background>
                </Button>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,80,0,0">

            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,140,0,0">
                <TextBlock x:Name="playerScoreText" FontSize="16" Foreground="Black" Margin="10"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
