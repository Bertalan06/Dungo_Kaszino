<Page x:Class="casino.home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:casino"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="home">

    <Page.Resources>
        <!-- Játék kártya gomb stílus -->
        <Style x:Key="GameCardStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="CardBorder"
                                CornerRadius="12"
                                BorderThickness="1"
                                ClipToBounds="True">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#1E2A3A" Offset="0"/>
                                    <GradientStop Color="#141E2B" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.BorderBrush>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#3A4A5A" Offset="0"/>
                                    <GradientStop Color="#1A2A3A" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.BorderBrush>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Játék neve -->
                                <TextBlock Grid.Row="0"
                                           Text="{TemplateBinding Tag}"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           FontFamily="Georgia"
                                           Foreground="White"
                                           HorizontalAlignment="Center"
                                           Margin="0,12,0,4"/>
                                
                                <!-- Játék képe -->
                                <Image Grid.Row="1"
                                       Source="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Content}"
                                       Stretch="Uniform"
                                       MaxHeight="200"
                                       HorizontalAlignment="Stretch"
                                       VerticalAlignment="Top"/>

                                <!-- Játék gomb -->
                                <Border Grid.Row="2"
                                        Margin="20,4,20,16"
                                        CornerRadius="6"
                                        Height="36">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#C8960C" Offset="0"/>
                                            <GradientStop Color="#8B6508" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <TextBlock Text="JÁTÉK"
                                               FontSize="13"
                                               FontWeight="Bold"
                                               FontFamily="Georgia"
                                               Foreground="White"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>
                            </Grid>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="CardBorder" Property="BorderBrush">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#FFD700" Offset="0"/>
                                            <GradientStop Color="#8B6508" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="CardBorder" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#253545" Offset="0"/>
                                            <GradientStop Color="#1A2535" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Fejléc gomb stílus -->
        <Style x:Key="HeaderButtonStyle" TargetType="Button">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="110"/>
            <Setter Property="Height" Value="34"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bg" CornerRadius="6" BorderThickness="1">
                            <Border.BorderBrush>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#FFD700" Offset="0"/>
                                    <GradientStop Color="#8B6508" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.BorderBrush>
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#2A1F00" Offset="0"/>
                                    <GradientStop Color="#1A1300" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <TextBlock Text="{TemplateBinding Content}"
                                       FontSize="12"
                                       FontWeight="Bold"
                                       FontFamily="Georgia"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Foreground="#FFD700"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bg" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#3A2F00" Offset="0"/>
                                            <GradientStop Color="#2A2000" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#0A0F18" Offset="0"/>
                <GradientStop Color="#0D1520" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- FEJLÉC -->
        <Border Grid.Row="0" BorderThickness="0,0,0,1" MinHeight="80">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="Transparent" Offset="0"/>
                    <GradientStop Color="#FFD700" Offset="0.5"/>
                    <GradientStop Color="Transparent" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#0F1A28" Offset="0"/>
                    <GradientStop Color="#0A1220" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <Grid x:Name="fejlecGrid" Margin="40,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition x:Name="masodikSor" Height="0"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel x:Name="egyenlegPanel" Grid.Row="0" Grid.Column="0"
                            Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Egyenleg:" FontSize="14" Foreground="#888"
                               FontFamily="Georgia" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock x:Name="egyenlegTB" FontSize="18" FontWeight="Bold"
                               FontFamily="Georgia" VerticalAlignment="Center">
                        <Run x:Name="egyenlegertek" Text="50 000 Ft" Foreground="#00C853"/>
                    </TextBlock>
                </StackPanel>

                <StackPanel Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="♠ DUNGÓ CASINO ♠"
                               FontSize="26" FontWeight="Bold" FontFamily="Georgia"
                               HorizontalAlignment="Center">
                        <TextBlock.Foreground>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#FFE066" Offset="0"/>
                                <GradientStop Color="#B8860B" Offset="1"/>
                            </LinearGradientBrush>
                        </TextBlock.Foreground>
                    </TextBlock>
                    <local:ido HorizontalAlignment="Center"/>
                </StackPanel>

                <StackPanel x:Name="gombokPanel" Grid.Row="0" Grid.Column="2"
                            Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <Button x:Name="feltoltes" Content="Feltöltés"
                            Style="{StaticResource HeaderButtonStyle}"
                            Margin="0,0,10,0" Click="feltoltes_Click"/>
                    <Button x:Name="kifizetes" Content="Kifizetés"
                            Style="{StaticResource HeaderButtonStyle}"
                            Click="kifizetes_Click"/>
                </StackPanel>

                <Grid x:Name="gombokPanel2" Grid.Row="1" Grid.Column="0"
                      Grid.ColumnSpan="3" Margin="0,8,0,10"
                      Visibility="Collapsed">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel x:Name="egyenlegPanel2" Grid.Column="0"
                                Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Egyenleg:" FontSize="14" Foreground="#888"
                                   FontFamily="Georgia" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock x:Name="egyenlegTB2" FontSize="18" FontWeight="Bold"
                                   FontFamily="Georgia" VerticalAlignment="Center">
                            <Run x:Name="egyenlegertek2" Text="50 000 Ft" Foreground="#00C853"/>
                        </TextBlock>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <Button x:Name="feltoltes2" Content="Feltöltés"
                                Style="{StaticResource HeaderButtonStyle}"
                                Margin="0,0,10,0" Click="feltoltes_Click"/>
                        <Button x:Name="kifizetes2" Content="Kifizetés"
                                Style="{StaticResource HeaderButtonStyle}"
                                Click="kifizetes_Click"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- JÁTÉKOK RÁCS -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="Játékok"
                           FontSize="26"
                           FontFamily="Georgia"
                           Foreground="#555"
                           Margin="60,30,0,20"/>

                <UniformGrid x:Name="jatekGrid" Columns="3" Margin="30,0,30,40">

                    <Button x:Name="blackjack" Tag="Blackjack"
                            Content="jatekok/blackjack/blackjack.png"
                            Style="{StaticResource GameCardStyle}"
                            Height="280" Margin="15"
                            Click="blackjack_Click"/>

                    <Button x:Name="chickenroad" Tag="Chicken Road"
                            Content="/chicken.png"
                            Style="{StaticResource GameCardStyle}"
                            Height="280" Margin="15"
                            Click="chickenroad_Click"/>

                    <Button x:Name="dice" Tag="Dice"
                            Content="jatekok/dice/dice.png"
                            Style="{StaticResource GameCardStyle}"
                            Height="280" Margin="15"
                            Click="dice_Click"/>

                    <Button x:Name="hilo" Tag="Hi-Lo"
                            Content="jatekok/hilo/hilo.png"
                            Style="{StaticResource GameCardStyle}"
                            Height="280" Margin="15"
                            Click="hilo_Click"/>

                    <Button x:Name="lezeus" Tag="Le Zeus"
                            Content="jatekok/lezeus/lezeus.png"
                            Style="{StaticResource GameCardStyle}"
                            Height="280" Margin="15"
                            Click="lezeus_Click"/>

                    <Button x:Name="mines" Tag="Mines"
                            Content="jatekok/mines/mines.png"
                            Style="{StaticResource GameCardStyle}"
                            Height="280" Margin="15"
                            Click="mines_Click"/>

                </UniformGrid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
