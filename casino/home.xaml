<Page x:Class="casino.home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:casino"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="home">

    <Grid Margin="35">
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="blackjack" Content="Játék!" Grid.Row="1" Grid.Column="0" Margin="53,0,53,0" Click="blackjack_Click"/>
        <Button Content="Játék!" Grid.Row="1" Grid.Column="1"/>
        <Button Content="Játék!" Grid.Row="1" Grid.Column="2"/>
        <Button Content="Játék!" Grid.Row="3" Grid.Column="0"/>
        <Button Content="Játék!" Grid.Row="3" Grid.Column="1"/>
        <Button Content="Játék!" Grid.Row="3" Grid.Column="2"/>
        <Image Grid.Row="0" Grid.Column="0" Source="/blackjack.png"/>
        <Image Grid.Row="0" Grid.Column="1" Source="/chicken.png"/>
        <Image Grid.Row="0" Grid.Column="2" Source="/dice.png"/>
        <Image Grid.Row="2" Grid.Column="0" Source="/hilo.png"/>
        <Image Grid.Row="2" Grid.Column="1" Source="/lezeus.png"/>
        <Image Grid.Row="2" Grid.Column="2" Source="/mines.png"/>
    </Grid>
</Page>
